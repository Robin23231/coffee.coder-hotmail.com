<!--        android:id="@+id/tv_distance"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_height="15dp"-->
<!--        android:layout_below="@id/tv_address"-->
